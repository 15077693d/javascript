{
    "version": "independent",
    "packages": [
        "packages/*"
    ],
    "command": {
        "version": {
            "message": "chore(release): Publish",
            "allowBranch": [
                "main",
                "next"
            ],
            "conventionalCommits": true
        },
        "publish": {
            "allowBranch": [
                "main",
                "next"
            ]
        }
    },
    "changelogPreset": {
        "name": "conventionalcommits"
    }
}