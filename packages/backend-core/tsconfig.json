{
    "compilerOptions": {
      "lib": ["ES2020", "DOM"],
      "target": "ES2019",
      "strict": true,
      "declaration": true,
      "declarationMap": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": false,
      "removeComments": true,
      "baseUrl": "src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  