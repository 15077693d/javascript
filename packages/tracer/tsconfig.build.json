{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "types": []
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
